<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EggTimer" />

    <NumberPicker
        android:id="@+id/hoursNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp" />

    <TextView
        android:id="@+id/hoursTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hoursNumberPicker"
        android:layout_alignRight="@+id/hoursNumberPicker"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="12dp"
        android:text="Hours"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <NumberPicker
        android:id="@+id/minutesNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutesTextView"
        android:layout_below="@+id/hoursTextView" />

    <TextView
        android:id="@+id/minutesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hoursTextView"
        android:layout_alignBottom="@+id/hoursTextView"
        android:layout_centerHorizontal="true"
        android:text="Minutes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/startTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hoursNumberPicker"
        android:layout_below="@+id/hoursNumberPicker"
        android:layout_marginTop="24dp"
        android:onClick="startEggTimer"
        android:text="Start Timer" />

    <EditText
        android:id="@+id/timerNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hoursTextView"
        android:layout_alignLeft="@+id/hoursNumberPicker"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:inputType="text"
        android:text="insert name of timer" >

        <requestFocus />
    </EditText>

</RelativeLayout>